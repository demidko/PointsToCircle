<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Points2Circle"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Height="420" Width="640"
        x:Name="AppWindow"
        Title="Points2Circle">
    <Canvas x:Name="Artcanvas"
            Height ="{Binding ElementName=AppWindow, Path=ActualHeight}" 
            Width="{Binding ElementName=AppWindow, Path=ActualWidth}"
            Background="White"
            MouseDown="ArtcanvasMouseDown"/>
</Window>
